# =============================================================================
# Samoey Copilot Staging Environment Configuration
# =============================================================================
# STAGING ENVIRONMENT - For testing before production deployment
# NEVER commit this file to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=2
RELOAD=false

# =============================================================================
# SECURITY - Use strong values but allow for testing
# =============================================================================
# Generate a strong secret key with: openssl rand -hex 32
SECRET_KEY=your-staging-secret-key-minimum-32-characters-change-in-staging

# Database password - use strong password for staging
POSTGRES_PASSWORD=your-staging-database-password-here

# Admin credentials - use staging-specific credentials
ADMIN_EMAIL=admin@staging.yourdomain.com
ADMIN_PASSWORD=your-staging-admin-password

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_SERVER=staging-db.yourdomain.com
POSTGRES_USER=postgres
POSTGRES_DB=samoey_copilot_staging

# Staging database URL
DATABASE_URL=postgresql://postgres:your-staging-database-password-here@staging-db.yourdomain.com:5432/samoey_copilot_staging

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=staging-redis.yourdomain.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-staging-redis-password-here

# Staging Redis URL
REDIS_URL=redis://:your-staging-redis-password-here@staging-redis.yourdomain.com:6379/0

# =============================================================================
# AI/ML SERVICES
# =============================================================================
# OpenAI API Key (can use same as production or staging-specific)
OPENAI_API_KEY=your-staging-openai-api-key-here

# HuggingFace Token (can use same as production or staging-specific)
HUGGINGFACE_TOKEN=your-staging-huggingface-token-here

# AI Model paths - staging paths
AI_MODEL_PATH=/app/models
VECTOR_STORE_PATH=/app/data/vector_store

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@staging.yourdomain.com
SMTP_PASSWORD=your-staging-smtp-password
EMAILS_FROM_EMAIL=noreply@staging.yourdomain.com
EMAILS_FROM_NAME=Samoey Copilot (Staging)

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO

# Sentry DSN for error tracking (staging environment)
SENTRY_DSN=https://your-staging-sentry-dsn

# Enable metrics collection in staging
PROMETHEUS_ENABLED=true
ENABLE_METRICS=true

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=26214400  # 25MB in bytes for staging

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURITY_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Less restrictive than production
RATE_LIMIT_WINDOW=60

# CORS origins - staging domains
BACKEND_CORS_ORIGINS=https://staging.yourdomain.com,https://www.staging.yourdomain.com,http://localhost:3000

# =============================================================================
# MONITORING THRESHOLDS
# =============================================================================
MONITORING_INTERVAL=5
ALERT_THRESHOLD_CPU=85.0
ALERT_THRESHOLD_MEMORY=90.0
ALERT_THRESHOLD_DISK=90.0

# =============================================================================
# WEBSOCKET SETTINGS
# =============================================================================
WS_MESSAGE_QUEUE_SIZE=150
WS_HEARTBEAT_INTERVAL=30

# =============================================================================
# STAGING ONLY SETTINGS
# =============================================================================
# Performance settings for staging
GUNICORN_TIMEOUT=90
MAX_REQUEST_SIZE=50MB

# Security headers (enabled but less restrictive)
SECURE_HEADERS=true
HSTS_ENABLED=true
CSP_ENABLED=true

# SSL/TLS (staging certificate)
FORCE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/staging.yourdomain.com.crt
SSL_KEY_PATH=/etc/ssl/private/staging.yourdomain.com.key

# Backup and recovery (staging)
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=12  # hours
BACKUP_RETENTION_DAYS=7

# Analytics and monitoring (staging)
GOOGLE_ANALYTICS_ID=your-staging-ga-tracking-id
MIXPANEL_TOKEN=your-staging-mixpanel-token

# CDN configuration (staging)
CDN_ENABLED=true
CDN_URL=https://staging-cdn.yourdomain.com

# Cache configuration
CACHE_TTL=1800  # 30 minutes
ENABLE_CACHE_COMPRESSION=true

# Testing features
TESTING_MODE=true
ENABLE_DEBUG_ENDPOINTS=true
ALLOW_TEST_ACCOUNTS=true
