# Application
APP_NAME="Pinnacle Copilot"
DEBUG=True
SECRET_KEY=your-secret-key-here

# Application
APP_NAME="Pinnacle Copilot"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pinnacle_copilot
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
JWT_SECRET=your-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email
SMTP_TLS=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME="Pinnacle Copilot"

# File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# AI/ML
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus
METRICS_PORT=9100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pinnacle_copilot.log

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=False
ENABLE_BETA_FEATURES=False

# External Services (uncomment and configure as needed)
# OPENAI_API_KEY=your-openai-api-key
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Auto-Fix Orchestrator
AUTO_FIX_ENABLED=True
AUTO_FIX_MAX_WORKERS=4
AUTO_FIX_QUEUE_SIZE=100

# Social Media Integration
SOCIAL_MEDIA_ENABLED=False
# TIKTOK_ACCESS_TOKEN=your-tiktok-token
# YOUTUBE_API_KEY=your-youtube-key
# PINTEREST_ACCESS_TOKEN=your-pinterest-token
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pinnacle
DATABASE_URL=postgresql://postgres:postgres@localhost/pinnacle

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 1 week
ALGORITHM=HS256

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# AI Settings
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# File Uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# API
API_V1_STR=/api/v1
PROJECT_NAME="Pinnacle Copilot"
VERSION=0.1.0
