# =============================================================================
# Samoey Copilot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# =============================================================================
# SECURITY - CRITICAL: CHANGE THESE VALUES IN PRODUCTION
# =============================================================================
# Generate a strong secret key with: openssl rand -hex 32
SECRET_KEY=change-this-secret-key-in-production-minimum-32-characters

# Database password - generate a strong password
POSTGRES_PASSWORD=your-secure-database-password-here

# Admin credentials - change these in production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_DB=samoey_copilot

# Alternative: Use direct DATABASE_URL if preferred
# DATABASE_URL=postgresql://postgres:your-password@localhost:5432/samoey_copilot

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no Redis password

# Alternative: Use direct REDIS_URL if preferred
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI/ML SERVICES
# =============================================================================
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# HuggingFace Token (required for some AI models)
HUGGINGFACE_TOKEN=your-huggingface-token-here

# AI Model paths
AI_MODEL_PATH=./models
VECTOR_STORE_PATH=./data/vector_store

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Samoey Copilot

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn

# Enable/disable metrics collection
PROMETHEUS_ENABLED=true
ENABLE_METRICS=true

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECURITY_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS origins (comma-separated URLs)
# BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# =============================================================================
# MONITORING THRESHOLDS
# =============================================================================
MONITORING_INTERVAL=5
ALERT_THRESHOLD_CPU=80.0
ALERT_THRESHOLD_MEMORY=85.0
ALERT_THRESHOLD_DISK=90.0

# =============================================================================
# WEBSOCKET SETTINGS
# =============================================================================
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# =============================================================================
# DEVELOPMENT ONLY - DO NOT USE IN PRODUCTION
# =============================================================================
# For development, you can uncomment these lines:
# DEBUG=true
# RELOAD=true
# LOG_LEVEL=DEBUG
